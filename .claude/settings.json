{
  "permissions": {
    "allow": [
      "Bash(npm test:*)",
      "Bash(npx jest:*)",
      "Bash(bun test:*)",
      "Bash(npx tdd-guard:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx tdd-guard"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx tdd-guard"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|clear",
        "hooks": [
          {
            "type": "command",
            "command": "npx tdd-guard"
          }
        ]
      }
    ]
  }
}
